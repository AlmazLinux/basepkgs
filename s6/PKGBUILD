pkgname=s6
pkgver=2.10.0.3
pkgrel=1
pkgdesc=""
arch=('x86_64')
url=""
license=('custom')
backup=()
source=(${pkgname}-${pkgver}.tar.gz)

build() {
    cd "${pkgname}-${pkgver}"
    CC=clang CXX=clang++      \
      ./configure --enable-shared      \
            --enable-static      \
            --enable-allstatic   \
            --enable-static-libc \
            --libdir=/usr/lib    \
            --libexecdir=/lib/s6 \
            --with-dynlib=/lib 
    make
}

package() {
    cd "${pkgname}-${pkgver}"
    make DESTDIR=${pkgdir} install
}
