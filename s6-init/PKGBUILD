pkgname=s6-linux-init
pkgver=1.0.6.3
pkgrel=1
pkgdesc=""
arch=('x86_64')
url=""
license=('custom')
backup=()
source=(${pkgname}-${pkgver}.tar.gz)

build() {
    cd "${pkgname}-${pkgver}"
    CC=clang CXX=clang++ \
        ./configure --enable-shared      \
            --enable-static      \
            --enable-allstatic   \
            --enable-static-libc \
            --libdir=/usr/lib \
            --libexecdir=/lib/s6-linux-init \
            --with-dynlib=/lib   \
            --enable-utmps 
    make
}

package() {
    cd "${pkgname}-${pkgver}"
    make DESTDIR=${pkgdir} install
}
